<div class="container">

<h2 align="center">Listing Categories</h2>
<div class="justify-content-center">
  <div class="row">
  <% @categories.each do |category| %>


    <h3 class="jumbotron col  ml-3">

      <%= link_to category.name, category_path(category) %>

    </h3>



<% end %>
  </div>
  <div  align="center">
    <%= will_paginate(@categories, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class:  "pagination-sm") %>
  </div>

</div>
</div>