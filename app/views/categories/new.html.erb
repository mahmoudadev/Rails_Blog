
<div class="errors" style="padding: 50px">
  <%= render 'shared/errors', object: @category %>
</div>

<div class="offset-md-2">
  <%= form_for @category do |f| %>
    <div class="form-group row">
      <%= f.label :name, class:'col-form-label col-1'%>
      <div class="col-sm-8">
        <%= f.text_field :name, class: "form-control", placeholder: "name goes here...  " %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-1"></div>
      <div class="col-8">
        <%= f.submit  class: "btn btn-primary btn-block"%>
      </div>
    </div>
  <% end %>
</div>