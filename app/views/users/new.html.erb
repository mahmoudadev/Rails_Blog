<div class="errors" style="padding: 50px">
  <%= render 'shared/errors', object: @user %>
</div>

<h2 align="center"> Signup For RailS Blog</h2>

<div class="offset-md-2">
  <%= form_for @user do |f| %>
    <div class="form-group row">
      <%= f.label :username, class: 'col-form-label col-1' %>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control",
                         placeholder: "Enter your username...  " %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :email, class: "col-from-label col-1" %>
      <div class="col-sm-8">
        <%= f.email_field :email, class: "form-control",
                          placeholder: "Enter you E-mail" %>
      </div>
    </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-from-label col-1" %>

        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control",
                               placeholder: "Enter you E-mail" %>
        </div>

      </div>

      <div class="form-group row">
        <div class="col-1"></div>
        <div class="col-8">
          <%= f.submit 'Signup',  class: "btn btn-primary btn-block" %>
        </div>
      </div>
  <% end %>
  </div>