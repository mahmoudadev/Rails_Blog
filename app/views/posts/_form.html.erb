
<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @post do |f| %>
  <div class="form-group row">
  <%= f.label :title, class:'col-form-label col-sm-2 text-right'%>
    <div class="col-sm-8">
  <%= f.text_field :title, class: "form-control", placeholder: "title goes here...  " %>
    </div>
  </div>

<div class="form-group row">
  <%= f.label :body, class: "col-from-label col-sm-2 text-right"%>
  <div class="col-sm-8">
  <%= f.text_area :body, class: "form-control", rows: "6", placeholder: "Description for your post" %>
</div>
</div>
  <div class="form-group offset-2">
    <%= f.submit  class: "btn btn-primary btn-lg"%>
  </div>
<% end %>
