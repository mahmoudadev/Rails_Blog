<div class="errors" style="padding: 50px">
  <%= render 'shared/errors', object: @post %>
</div>
<div class="offset-md-2">
  <%= form_for @post do |f| %>
    <div class="form-group row">
      <%= f.label :title, class: 'col-form-label col-1' %>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "title goes here...  " %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :body, class: "col-from-label col-1" %>
      <div class="col-sm-8">
        <%= f.text_area :body, class: "form-control", rows: "6", placeholder: "Description for your post" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="offset-md-1 col-sm-8">
        <%= f.collection_check_boxes :category_ids, Category.all, :id , :name do |ch|  %>
          <%= ch.label(class: "checkbox-inline") {ch.check_box(class:"checkbox") + ch.text} %>
        <%end %>
      </div>
    </div>


    <div class="form-group row">
      <div class="col-1"></div>
      <div class="col-8">
        <%= f.submit class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>