
<div class="post">
  <div class="col-sm-8 offset-2">
<h2 class="jumbotron">
<%= @post.title %>
  <div class="post-actions">
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-success btn-sm" %>
    <%= link_to "delete", post_path(@post), method: :delete, data: {confirm: "Are you really want to delete this post?"},
                class: "btn btn-danger btn-sm" %>
    <%= link_to "Back to Posts", posts_path, class: "btn btn-secondary btn-sm" %>
  </div>
</h2>

<div class="post-body" align="left">
  <%= @post.body %>
</div>

  </div>
</div>