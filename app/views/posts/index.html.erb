<h2>Lastest Posts </h2>
<p>
  <%= link_to "Create New", new_post_path  %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td> <%= post.title %></td>
    <td> <%= post.body %></td>
    <td> <%= link_to "Edit", edit_post_path(post)  %></td>
    <td> <%= link_to "Show", post_path(post)  %></td>
    <td> <%= link_to "Delete", post_path(post), method: :delete, data: {confirm:"Are You Sure?"}  %></td>
  </tr>
    <% end %>
</table>