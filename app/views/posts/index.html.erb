<h2>Lastest Posts </h2>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td> <%= post.title %></td>
    <td> <%= post.body %></td>
    <td> <%= link_to "Edit", edit_post_path(post)  %></td>
    <td> <%= link_to "Show", post_path(post)  %></td>
  </tr>
    <% end %>
</table>